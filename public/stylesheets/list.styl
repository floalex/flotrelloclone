#lists
  display inline-block
  vertical-align top
  height: 100%
  white-space: nowrap

.list-content
  display inline-block
  vertical-align top
  width 270px
  margin 0 5px
  background #E2E4E6
  border-radius 3px
  box-sizing border-box
  -webkit-flex-direction column
  -ms-flex-direction column
  flex-direction column
  max-height 100%
  position relative
  white-space: nowrap
  .list-header
    cursor pointer
    flex: 0 0 auto
    padding: 8px 10px
    position: relative
    min-height: 18px
  .header-wrapper
    position: absolute
    top: 0
    right: 30px
    bottom: 0
    left: 0
    cursor: pointer
  .title
    width: 200px
  .list-icons
    float: right
    z-index: 5
    span
      display: inline-block
      color: #999
    .icon-ellipsis
        padding: 5px 5px 0 5px
        border-radius: 3px
        cursor: pointer
        &:hover
          color: inherit
  .list-cards
    -webkit-flex 1 1 auto
    -ms-flex 1 1 auto
    flex 1 1 auto
    overflow-y auto
    margin 0 4px
    padding 0 4px
    z-index 1
    min-height 10px
    max-height: calc(100vh - 200px);
    
.list-modal
  display: none
  &.show
    display: block
    position: absolute
    top: 40px
    left: 250px
    width: 300px
    padding: 10px 0
    background: #fff
    border-radius: 3px
    border: 1px solid #D6DADC
    border-bottom-color: #C4C9CC
    box-shadow: 0 1px 6px rgba(0,0,0,.15)
    z-index: 70
    .pop-over-header
      height 36px
      position relative
      margin-bottom 8px
      text-align center
      .pop-over-header-title
        -moz-box-sizing border-box
        box-sizing border-box
        color #8c8c8c
        display block
        line-height 36px
        border-bottom 1px solid #D6DADC
        margin 0 10px
        overflow hidden
        padding 0 2pc
        position relative
        text-overflow ellipsis
        white-space nowrap
        z-index 1
      .pop-over-header-button-close
        padding: 10px 10px 10px 4px
        position: absolute
        top: 0
        right: 0
        z-index: 2
        color: #4D4D4D
    hr
      background: #D6DADC
      border: 0
      color: #D6DADC
      height: 1px
      margin: 8px 0
      width: 100%
    .pop-over-list
      font-weight: bold
      overflow-x: hidden
      overflow-y: auto
      padding: 0 10px
      li
        & > a
          cursor pointer
          display block
          font-weight 700
          padding 6px 10px
          position relative
          margin 0 -10px
          text-decoration none
          color: #4D4D4D
      .js
        cursor: pointer
        &:hover
          background: #026AA7
          color: white
      .fa-check
        color: #999

.ui-sortable-placeholder
  background: rgba(0,0,0,.2)
  display: inline-block
  border-radius: 3px

.card-new
  a
    display: block
    box-sizing: border-box
    border-radius: 0 0 3px 3px;
    color: #8c8c8c;
    padding: 8px 13px;
    position: relative;
    text-decoration: none;
    cursor: pointer
    &:hover
      text-decoration: underline
      color: #4D4D4D
      background: #C4C9CC
    + form
      display: none
  form
    display: block
    padding: 8px 10px
    textarea
      box-sizing: border-box
      color: black
      width: 250px
      padding: 5px;
    form-controls()

.card-preview
  background: white
  box-sizing: border-box
  overflow: hidden
  margin-bottom: 6px
  border-bottom: 1px solid #ccc
  padding: 6px 6px 2px 8px
  position: relative
  border-radius: 3px
  min-height: 20px
  max-width: 300px
  z-index: 2
  cursor: pointer
  .edit
    display: none
    float: right
    margin: -4px 0 0 0
    padding: 5px 5px 2px 5px
    border-radius: 3px
    color: black
    cursor: pointer
    &:hover
      color: inherit
      background: #EDEFF0
  p
    color: #4d4d4d
    display: block
    font-weight: 400
    margin: 0 0 4px
    overflow: hidden
    text-decoration: none
    word-wrap: break-word
  &:hover
    background: #C4C9CC
    .edit
      display: block
  .labels
    overflow: hidden
    margin: 0 0 5px 0
    font-size: 10px
  .label
    float: left
    height: 8px
    width: 35px
    margin: 2px
    border-radius: 3px
  .badges
    margin: 5px 0 0 0
    padding-bottom: 2px
    li
      display: inline-block
      margin: 0 5px 0 0
      font-size: 12px
      vertical-align: middle
      color: #4d4d4d
    .due-date
      padding: 2px 5px
      border-radius: 3px
      background: red
      color: white

.move
  padding: 12px
  label-select()
  input[type="submit"]
    submit-btn()

.copylist
  padding: 12px
  dl
    margin: 0 0 15px 0
    dt
      margin: 0 0 15px 0
      color: #4d4d4d
    textarea
      color: #4d4d4d
      width: 95%
      height: 72px
      padding: 5px
      background: #E2E4E6;
      border: 1px solid colors.light-grey
      &:focus
        background: #fff;
        border-color: #298FCA;
        box-shadow: 0 0 2px #298FCA
  input[type="submit"]
    submit-btn()

.move-all-cards
  padding: 12px
  .actions
    cursor: pointer
    .action
      padding: 6px 10px
      color: black
      &:hover
        background: colors.background-blue
        color: #fff
      &:first-child
        color: colors.darker-grey
        &:hover
          background: #fff
          cursor: none